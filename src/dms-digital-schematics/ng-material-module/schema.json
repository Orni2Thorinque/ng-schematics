{
    "$schema": "http://json-schema.org/schema",
    "id": "ng-material-ready",
    "title": "Creates a material-ready schematics",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "Angular generation project target",
            "x-prompt": "Import project name ?"
        },
        "modulePath": {
            "type": "string",
            "description": "Target module for module import",
            "x-prompt": "Import module target path ?"
        },
        "prefix": {
            "type": "string",
            "description": "Module prefix",
            "default": "app",
            "x-prompt": "Module prefix ?"
        },
        "importStyle": {
            "type": "boolean",
            "description": "Import a default theme into global style file",
            "x-prompt": "Import default theme into global style ?"
        },
        "importHammerGesture": {
            "type": "boolean",
            "description": "Import HammerJS gesture support",
            "x-prompt": "Import HammerJS gesture support ?"
        }
    },
    "required": []
}